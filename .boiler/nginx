server {
    server_name rest.thefirstspine.fr;

    location / {
        proxy_pass http://127.0.0.1:2405;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/rest.thefirstspine.fr/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/rest.thefirstspine.fr/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = rest.thefirstspine.fr) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    server_name rest.thefirstspine.fr;

    listen 80;
    return 404; # managed by Certbot


}
